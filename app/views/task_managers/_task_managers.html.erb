<ul class="media-list">
  
<% task_managers.each do |task_manager| %>

    <li class="media">

      <div class="media-body">
        <div>
          
<%= link_to task_manager.user.name, user_path(task_manager.user) %>
 <span class="text-muted">posted at 
<%= task_manager.created_at %>
</span>
        </div>
        <div>
          <p>
<%= task_manager.content %>
</p>
        </div>
      </div>
      
<% if current_user == task_manager.user %>

            
<%= link_to "Delete", task_manager, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>

          
<% end %>
      
    </li>
  
<% end %>

  
<%= paginate task_managers %>

</ul>